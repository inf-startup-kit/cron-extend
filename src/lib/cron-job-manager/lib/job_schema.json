{
    "type": "object",
    "properties": {
        "enable": {
            "type": "boolean",
            "default": false
        },
        "description": {
            "type": "string",
            "default": "",
            "minLength": 0,
            "maxLength": 256
        },
        "timeout": {
            "type": "integer",
            "default": 60,
            "minimum": 1
        },
        "tags": {
            "type": "array",
            "default": [],
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 32,
                "pattern": "[-a-zA-Z0-9_.]{1,32}$"
            },
            "minItems": 0
        },
        "cwd": {
            "type": "string",
            "default": "",
            "minLength": 0,
            "maxLength": 256
        },
        "command": {
            "type": "string",
            "default": "",
            "minLength": 1,
            "maxLength": 64
        },
        "args": {
            "type": "array",
            "default": [],
            "items": {
                "type": "string",
                "minLength": 1,
                "maxLength": 32
            },
            "minItems": 0
        },
        "env": {
            "type": "object",
            "default": {},
            "patternProperties": {
                "^[a-zA-Z0-9]{1}[-a-zA-Z0-9_]{0,63}": { 
                    "type": "string",
                    "minLength": 1
                }
            }
        },
        "cron": {
            "type": "object",
            "default": {},
            "properties": {
                "interval": {
                    "type": "string",
                    "default": "1 * * * * *",
                    "minLength": 1,
                    "maxLength": 128
                },
                "time_zone": {
                    "type": "string",
                    "default": "Europe/Moscow",
                    "minLength": 1,
                    "maxLength": 64
                }
            },
            "required": [
                "interval",
                "time_zone"
            ]
        }
    },
    "required": [
        "enable",
        "description",
        "timeout",
        "tags",
        "cwd",
        "command",
        "args",
        "env",
        "cron"
    ]
}